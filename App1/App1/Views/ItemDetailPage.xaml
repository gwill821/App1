<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.ItemDetailPage"
             Title="{Binding Title}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#FCAE1E</Color>

        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout Spacing="20" Padding="15" BackgroundColor="{StaticResource Accent}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Label Text="Subject:" FontSize="Medium" FontAttributes="Bold"/>
        <Label Text="{Binding Text}" FontSize="Small" FontAttributes="Bold"/>
        <Label Text="Assessment:" FontSize="Medium" FontAttributes="Bold"/>
        <Label Text="{Binding Description}" FontSize="Small" FontAttributes="Bold"/>
    </StackLayout>

</ContentPage>